class McGillMart
{
  1 <@>- * User users;
  1 <@>- * Item items;
}

class User
{
  autounique id;
  unique String email;
  String name;
  String password;
  String phoneNumber;
  
  1 <@>- 1 ShoppingCart shoppingCart;
  1 <@>- 0..* Transaction history;
}

class Item
{
  autounique id;
  String name;
  Double price;
  String description;
  enum Category { Electronics, Clothing, Textbook, Furniture, Other }
  Category category;
}

class ShoppingCart {
  0..* -> * Item items;
}

class Transaction {
  autounique id;
  Double amount;
  Date dateOfPurchase;
}
